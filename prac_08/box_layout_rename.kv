BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    Button:
        text: 'Clear'
        on_press: app.handle_clear()

    TextInput:
        id: input_name
        text: ''
        multiline: False
        hint_text: 'Type your name here'

    Button:
        text: 'Greet'
        on_press: app.handle_greet()

    Label:
        id: output_label
        text: 'Enter your name'
        color: (1, 1, 0, 1)
        size_hint_y: None
        height: self.texture_size[1] + 20
