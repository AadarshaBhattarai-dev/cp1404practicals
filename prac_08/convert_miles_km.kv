BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        TextInput:
            id: input_miles
            text: '34'
            font_size: 48
            multiline: False
            on_text: app.handle_text(self.text)

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            spacing: 8

            Button:
                text: 'Up'
                font_size: 16
                background_normal: ''
                background_color: (0.25,0.25,0.25,1)
                color: (1,1,1,1)
                on_press: app.handle_increment(1)

            Button:
                text: 'Down'
                font_size: 16
                background_normal: ''
                background_color: (0.25,0.25,0.25,1)
                color: (1,1,1,1)
                on_press: app.handle_increment(-1)

    Label:
        id: output_label
        font_size: 48
        text: app.km_result
        color: (1, 1, 0, 1)
        halign: 'center'
        valign: 'middle'
